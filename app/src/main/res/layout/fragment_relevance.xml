<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ellipse0"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:tint="@color/Red"
            app:layout_constraintRight_toLeftOf="@id/ellipse1"
            app:srcCompat="@drawable/dialog_shape"
            tools:layout_editor_absoluteY="20dp" />

        <ImageView
            android:id="@+id/ellipse1"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:tint="@color/Lime"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/dialog_shape" />


        <ImageView
            android:id="@+id/ellipse2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@+id/ellipse0"
            android:tint="@color/Blue"
            app:layout_constraintLeft_toRightOf="@id/ellipse1"
            app:srcCompat="@drawable/dialog_shape" />
    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.beardedhen.androidbootstrap.BootstrapLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bootstrapBrand="warning"
            android:layout_below="@id/bootstrapLabel"
            app:bootstrapHeading="h1"
            app:bootstrapText="lol"
            app:roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/bootstrapLabel2"
            app:bootstrapBrand="warning"
            app:bootstrapHeading="h1"
            app:bootstrapText="lol"
            app:roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/bootstrapLabel"
            app:bootstrapBrand="warning"
            app:bootstrapHeading="h1"
            app:bootstrapText="lol"
            app:roundedCorners="true"
            android:id="@+id/bootstrapLabel2" />

        <com.beardedhen.androidbootstrap.BootstrapLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/bootstrapLabel"
            app:bootstrapBrand="warning"
            app:bootstrapHeading="h1"
            app:bootstrapText="lol"
            app:roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:bootstrapBrand="warning"
            app:bootstrapHeading="h1"
            app:bootstrapText="lol"
            app:roundedCorners="true"
            android:id="@+id/bootstrapLabel" />
    </RelativeLayout>
</LinearLayout>