<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@drawable/dialog_shape"
    android:orientation="vertical">
    <!--Use 500dp instead of margin for exit-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/highscores_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:textColor="@android:color/white"
                android:textSize="@dimen/bootstrap_h1_text_size"
                app:bootstrapBrand="warning"
                app:bootstrapText="@string/highscores" />

            <TextView
                android:id="@+id/rules_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:text="@string/rules_tirade"
                android:textColor="@android:color/white"
                android:textSize="@dimen/bootstrap_h3_text_size" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/close"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_close_white_24dp"
        android:translationZ="10dp" />
    <!--</RelativeLayout>-->
</RelativeLayout>